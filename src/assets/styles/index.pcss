@import 'https://fonts.googleapis.com/css?family=Advent+Pro';
@import '../../../node_modules/normalize.css/normalize.css';
@import 'variables.pcss';
@import 'grid.pcss';
@import 'components/MenuBox.pcss';
@import 'components/MenuItem.pcss';
@import 'components/AnswerBox.pcss';
@import 'components/LanguageSwitch.pcss';
@import 'components/NotificationBox.pcss';
@import 'components/SocialShare.pcss';
@import 'controllers/MainMenu.pcss';
@import 'controllers/About.pcss';
@import 'controllers/FamousRiddles.pcss';
@import 'controllers/Riddle.pcss';

* {
    box-sizing: border-box;
}

html,
body {
    width: 100%;
    height: 100%;
}

.wrapper {
    min-height: 100%;
    margin: 0 auto calc($footer-height * -1);
}

body {
    padding: $padding-large;
    box-sizing: border-box;
    background: $brand-primary;
    color: $text-color;
    font-family: $font-family;
    font-size: $font-size-base;
    line-height: 1.5;
}

header {
    .columns {
        margin-bottom: calc($margin-large * 2);
    }

    .logo {
        img {
            display: block;
            width: 100%;
            max-width: 240px;
            margin: 0 auto;
        }
    }
}

main {
    overflow: auto;
    padding: $padding-base;

    > .row {
        margin-bottom: $margin-large;
    }
}

footer {
    padding: $padding-base;
    font-size: .9rem;
    text-align: left;
}

footer, .push {
    height: $footer-height;
}

a {
    color: $text-color;
    text-decoration: none !important;
    transition: color 0.2s linear;

    &:hover {
        color: color($brand-primary lightness(80%));
    }
}

input {
    padding: calc($padding-base / 2) $padding-base;
    color: color($text-color blackness(85%));
}

.link {
    margin-bottom: $margin-base;
    padding: 0;
    background: none;
    border: none;
    color: $text-color;
    font-size: 28px;
    transition: opacity .3s linear;
    cursor: pointer;

    &:hover {
        opacity: .5;
    }

    img {
        width: 10px;
        height: 10px;
        float: left;
        margin-top: 16px;
        margin-right: $margin-base;
    }

    a {
    }
}

@media(min-width: $breakpoint-sm) {
    header {
        .logo {
            img {
                float: left;
            }
        }

        .tools {
            & > div {
                float: left;
                text-align: right;
                display: inline-block;
            }
        }
    }

    .link {
        margin-bottom: $margin-large;

        img {
            width: 16px;
            height: 16px;
            margin-top: $margin-large;
        }

        a {
            font-size: 36px;
        }
    }
}
